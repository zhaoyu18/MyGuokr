<?xml version="1.0" encoding="utf-8"?><!-- view_article_feed.xmlm_feed.xml -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="snapshot"
            type="com.example.wangzhaoyu.myguokr.model.response.ArticleSnapShot"/>

        <variable
            name="option"
            type="com.nostra13.universalimageloader.core.DisplayImageOptions"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toLeftOf="@+id/iv_title"
                android:layout_toStartOf="@+id/iv_title"
                android:maxLines="3"
                android:text="@{snapshot.title}"
                android:textSize="@dimen/abc_text_size_title_material"/>

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:background="@color/primary_material_light"
                android:scaleType="centerCrop"
                app:imageOption="@{option}"
                app:imageUrl="@{snapshot.image_info.url}"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>